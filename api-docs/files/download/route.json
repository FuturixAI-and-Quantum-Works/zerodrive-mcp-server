{
  "meta": {
    "title": "Download File",
    "description": "Generate a signed URL for downloading a file. The URL is valid for 1 hour.",
    "category": "File Management",
    "categorySlug": "files"
  },
  "endpoint": {
    "method": "GET",
    "path": "/api/v1/files/{fileId}/download",
    "baseUrl": "https://drive.futurixai.com"
  },
  "auth": {
    "required": true,
    "type": "bearer",
    "scopes": ["files:read"]
  },
  "rateLimit": {
    "requests": 100,
    "window": "1m"
  },
  "request": {
    "headers": [
      {
        "name": "Authorization",
        "type": "string",
        "required": true,
        "description": "Bearer token for authentication",
        "example": "Bearer zd_live_abc123..."
      }
    ],
    "pathParams": [
      {
        "name": "fileId",
        "type": "string",
        "required": true,
        "description": "The unique identifier of the file to download",
        "example": "clx1234567890"
      }
    ]
  },
  "responses": {
    "success": [
      {
        "status": 200,
        "statusText": "OK",
        "description": "Download URL generated successfully",
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "success": { "type": "boolean" },
            "data": {
              "type": "object",
              "properties": {
                "downloadUrl": {
                  "type": "string",
                  "description": "Signed URL for downloading the file"
                },
                "expiresIn": {
                  "type": "integer",
                  "description": "Time in seconds until the URL expires"
                }
              }
            }
          }
        }
      }
    ],
    "errors": [
      {
        "status": 401,
        "statusText": "Unauthorized",
        "description": "Missing or invalid authentication token"
      },
      {
        "status": 404,
        "statusText": "Not Found",
        "description": "File not found or access denied"
      }
    ]
  }
}
