{
  "meta": {
    "title": "Update File",
    "description": "Update file metadata such as name, description, folder location, starred status, or tags. Can also restore a file from trash.",
    "category": "File Management",
    "categorySlug": "files"
  },
  "endpoint": {
    "method": "PATCH",
    "path": "/api/v1/files/{fileId}",
    "baseUrl": "https://drive.futurixai.com"
  },
  "auth": {
    "required": true,
    "type": "bearer",
    "scopes": ["files:write"]
  },
  "rateLimit": {
    "requests": 30,
    "window": "1m"
  },
  "request": {
    "headers": [
      {
        "name": "Authorization",
        "type": "string",
        "required": true,
        "description": "Bearer token for authentication",
        "example": "Bearer zd_live_abc123..."
      },
      {
        "name": "Content-Type",
        "type": "string",
        "required": true,
        "description": "application/json",
        "example": "application/json"
      }
    ],
    "pathParams": [
      {
        "name": "fileId",
        "type": "string",
        "required": true,
        "description": "The unique identifier of the file to update",
        "example": "clx1234567890"
      }
    ],
    "body": {
      "contentType": "application/json",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": false,
            "description": "New name for the file",
            "example": "updated-report.pdf"
          },
          "description": {
            "type": "string",
            "required": false,
            "description": "File description",
            "nullable": true,
            "example": "Updated quarterly report"
          },
          "folderId": {
            "type": "string",
            "required": false,
            "description": "Move file to a different folder (null for root)",
            "nullable": true,
            "example": "clx0987654321"
          },
          "isStarred": {
            "type": "boolean",
            "required": false,
            "description": "Star or unstar the file",
            "example": true
          },
          "tags": {
            "type": "array",
            "required": false,
            "description": "List of tags for the file",
            "items": { "type": "string" },
            "example": ["important", "finance"]
          },
          "action": {
            "type": "string",
            "required": false,
            "description": "Special action. Use 'restore' to restore file from trash.",
            "enum": ["restore"]
          }
        }
      }
    }
  },
  "responses": {
    "success": [
      {
        "status": 200,
        "statusText": "OK",
        "description": "File updated successfully",
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "success": { "type": "boolean" },
            "data": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "description": { "type": "string", "nullable": true },
                "folderId": { "type": "string", "nullable": true },
                "isStarred": { "type": "boolean" },
                "isTrashed": { "type": "boolean" },
                "tags": { "type": "array", "items": { "type": "string" } },
                "updatedAt": { "type": "string", "format": "date-time" }
              }
            }
          }
        }
      }
    ],
    "errors": [
      {
        "status": 401,
        "statusText": "Unauthorized",
        "description": "Missing or invalid authentication token"
      },
      {
        "status": 404,
        "statusText": "Not Found",
        "description": "File not found or access denied"
      },
      {
        "status": 500,
        "statusText": "Internal Server Error",
        "description": "Failed to update file"
      }
    ]
  }
}
