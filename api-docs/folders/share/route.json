{
  "meta": {
    "title": "Share Folder",
    "description": "Share a folder and its contents with other users by email. Recipients will receive an email notification and can access the folder through their ZeroDrive account.",
    "category": "Folder Management",
    "categorySlug": "folders"
  },
  "endpoint": {
    "method": "POST",
    "path": "/api/v1/folders/{folderId}/share",
    "baseUrl": "https://drive.futurixai.com"
  },
  "auth": {
    "required": true,
    "type": "bearer",
    "scopes": ["folders:write", "folders:share"]
  },
  "rateLimit": {
    "requests": 30,
    "window": "1m"
  },
  "request": {
    "headers": [
      {
        "name": "Authorization",
        "type": "string",
        "required": true,
        "description": "Bearer token for authentication",
        "example": "Bearer zd_live_abc123..."
      },
      {
        "name": "Content-Type",
        "type": "string",
        "required": true,
        "description": "application/json",
        "example": "application/json"
      }
    ],
    "pathParams": [
      {
        "name": "folderId",
        "type": "string",
        "required": true,
        "description": "The unique identifier of the folder to share",
        "example": "clx0987654321"
      }
    ],
    "body": {
      "contentType": "application/json",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "emails": {
            "type": "array",
            "required": true,
            "description": "Email addresses of users to share with",
            "items": { "type": "string", "format": "email" },
            "example": ["colleague@example.com", "partner@example.com"]
          },
          "role": {
            "type": "string",
            "required": false,
            "description": "Permission level for shared users",
            "enum": ["viewer", "editor"],
            "default": "viewer"
          },
          "canShare": {
            "type": "boolean",
            "required": false,
            "description": "Whether recipients can re-share the folder",
            "default": false
          },
          "message": {
            "type": "string",
            "required": false,
            "description": "Optional message to include in the share notification",
            "example": "Here are the project files"
          }
        }
      }
    }
  },
  "responses": {
    "success": [
      {
        "status": 200,
        "statusText": "OK",
        "description": "Folder shared successfully",
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "success": { "type": "boolean" },
            "data": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "shareLink": { "type": "string" },
                "sharedWith": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    ],
    "errors": [
      {
        "status": 400,
        "statusText": "Bad Request",
        "description": "No email addresses provided"
      },
      {
        "status": 401,
        "statusText": "Unauthorized",
        "description": "Missing or invalid authentication token"
      },
      {
        "status": 404,
        "statusText": "Not Found",
        "description": "Folder not found"
      },
      {
        "status": 500,
        "statusText": "Internal Server Error",
        "description": "Failed to share folder"
      }
    ]
  }
}
