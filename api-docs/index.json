  "title": "ZeroDrive Public API",
  "description": "ZeroDrive API allows you to programmatically manage files, folders, workspaces, and more in your cloud storage.",
  "authentication": {
    "type": "bearer",
    "description": "All API requests require authentication via Bearer token in the Authorization header.",
    "header": "Authorization",
    "format": "Bearer <API_KEY>",
    "example": "Bearer zd_live_abc123..."
  },
  "rateLimits": {
    "read": { "requests": 100, "window": "1m" },
    "write": { "requests": 30, "window": "1m" }
