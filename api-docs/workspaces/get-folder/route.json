{
  "meta": {
    "title": "Get Workspace Folder",
    "description": "Get detailed information about a folder in a workspace, including its full breadcrumb path.",
    "category": "Workspace Management",
    "categorySlug": "workspaces"
  },
  "endpoint": {
    "method": "GET",
    "path": "/api/v1/workspaces/{workspaceId}/folders/{folderId}",
    "baseUrl": "https://zerodrive.futurixai.com"
  },
  "auth": {
    "required": true,
    "type": "bearer",
    "scopes": ["workspaces:read"]
  },
  "rateLimit": {
    "requests": 100,
    "window": "1m"
  },
  "request": {
    "headers": [
      {
        "name": "Authorization",
        "type": "string",
        "required": true,
        "description": "Bearer token for authentication",
        "example": "Bearer zd_live_abc123..."
      }
    ],
    "pathParams": [
      {
        "name": "workspaceId",
        "type": "string",
        "required": true,
        "description": "The unique identifier of the workspace",
        "example": "workspace_abc123"
      },
      {
        "name": "folderId",
        "type": "string",
        "required": true,
        "description": "The unique identifier of the folder",
        "example": "folder_xyz789"
      }
    ]
  },
  "responses": {
    "success": [
      {
        "status": 200,
        "statusText": "OK",
        "description": "Folder details retrieved successfully",
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "folder": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "description": { "type": "string", "nullable": true },
                "color": { "type": "string", "nullable": true },
                "isStarred": { "type": "boolean" },
                "isShared": { "type": "boolean" },
                "isTrashed": { "type": "boolean" },
                "trashedAt": { "type": "string", "format": "date-time", "nullable": true },
                "createdAt": { "type": "string", "format": "date-time" },
                "updatedAt": { "type": "string", "format": "date-time" },
                "createdBy": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" },
                    "email": { "type": "string" },
                    "image": { "type": "string", "nullable": true }
                  }
                },
                "parent": {
                  "type": "object",
                  "nullable": true,
                  "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" }
                  }
                },
                "childCount": { "type": "integer", "description": "Number of subfolders" },
                "fileCount": { "type": "integer", "description": "Number of files in folder" },
                "path": {
                  "type": "array",
                  "description": "Breadcrumb path from root to this folder",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    ],
    "errors": [
      {
        "status": 401,
        "statusText": "Unauthorized",
        "description": "Missing or invalid authentication token"
      },
      {
        "status": 404,
        "statusText": "Not Found",
        "description": "Workspace not found, access denied, or folder not found"
      },
      {
        "status": 500,
        "statusText": "Internal Server Error",
        "description": "Failed to get folder"
      }
    ]
  }
}
