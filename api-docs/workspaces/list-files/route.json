{
  "meta": {
    "title": "List Workspace Files",
    "description": "List files in a workspace with filtering, pagination, and sorting options. Use folderId parameter to list files in a specific folder.",
    "category": "Workspace Management",
    "categorySlug": "workspaces"
  },
  "endpoint": {
    "method": "GET",
    "path": "/api/v1/workspaces/{workspaceId}/files",
    "baseUrl": "https://zerodrive.futurixai.com"
  },
  "auth": {
    "required": true,
    "type": "bearer",
    "scopes": ["workspaces:read"]
  },
  "rateLimit": {
    "requests": 100,
    "window": "1m"
  },
  "request": {
    "headers": [
      {
        "name": "Authorization",
        "type": "string",
        "required": true,
        "description": "Bearer token for authentication",
        "example": "Bearer zd_live_abc123..."
      }
    ],
    "pathParams": [
      {
        "name": "workspaceId",
        "type": "string",
        "required": true,
        "description": "The unique identifier of the workspace",
        "example": "workspace_abc123"
      }
    ],
    "queryParams": [
      {
        "name": "folderId",
        "type": "string",
        "required": false,
        "description": "Filter by folder ID. Use 'null' or empty string for root-level files. Omit to list all files.",
        "example": "folder_xyz789"
      },
      {
        "name": "trashed",
        "type": "boolean",
        "required": false,
        "description": "Include trashed files in results",
        "default": false
      },
      {
        "name": "starred",
        "type": "boolean",
        "required": false,
        "description": "Only return starred files",
        "default": false
      },
      {
        "name": "search",
        "type": "string",
        "required": false,
        "description": "Search files by name (case-insensitive)"
      },
      {
        "name": "limit",
        "type": "integer",
        "required": false,
        "description": "Number of files to return (max 100)",
        "default": 50
      },
      {
        "name": "offset",
        "type": "integer",
        "required": false,
        "description": "Number of files to skip for pagination",
        "default": 0
      },
      {
        "name": "sortBy",
        "type": "string",
        "required": false,
        "description": "Field to sort by",
        "enum": ["name", "size", "createdAt", "updatedAt"],
        "default": "updatedAt"
      },
      {
        "name": "sortOrder",
        "type": "string",
        "required": false,
        "description": "Sort direction",
        "enum": ["asc", "desc"],
        "default": "desc"
      }
    ]
  },
  "responses": {
    "success": [
      {
        "status": 200,
        "statusText": "OK",
        "description": "Files retrieved successfully",
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "files": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "description": { "type": "string", "nullable": true },
                  "size": { "type": "string" },
                  "mimeType": { "type": "string" },
                  "extension": { "type": "string" },
                  "storageUrl": { "type": "string" },
                  "thumbnailUrl": { "type": "string", "nullable": true },
                  "isStarred": { "type": "boolean" },
                  "isShared": { "type": "boolean" },
                  "isTrashed": { "type": "boolean" },
                  "trashedAt": { "type": "string", "format": "date-time", "nullable": true },
                  "version": { "type": "integer" },
                  "createdAt": { "type": "string", "format": "date-time" },
                  "updatedAt": { "type": "string", "format": "date-time" },
                  "lastAccessedAt": { "type": "string", "format": "date-time", "nullable": true },
                  "uploadedBy": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" },
                      "email": { "type": "string" },
                      "image": { "type": "string", "nullable": true }
                    }
                  },
                  "folder": {
                    "type": "object",
                    "nullable": true,
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" }
                    }
                  },
                  "tags": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            },
            "total": { "type": "integer" },
            "limit": { "type": "integer" },
            "offset": { "type": "integer" },
            "hasMore": { "type": "boolean" }
          }
        }
      }
    ],
    "errors": [
      {
        "status": 401,
        "statusText": "Unauthorized",
        "description": "Missing or invalid authentication token"
      },
      {
        "status": 404,
        "statusText": "Not Found",
        "description": "Workspace not found or access denied"
      },
      {
        "status": 500,
        "statusText": "Internal Server Error",
        "description": "Failed to list files"
      }
    ]
  }
}
