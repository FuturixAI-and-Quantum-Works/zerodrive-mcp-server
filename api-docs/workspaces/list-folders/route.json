{
  "meta": {
    "title": "List Workspace Folders",
    "description": "List folders in a workspace with filtering, pagination, and sorting options. Use parentId parameter to list folders within a specific parent folder.",
    "category": "Workspace Management",
    "categorySlug": "workspaces"
  },
  "endpoint": {
    "method": "GET",
    "path": "/api/v1/workspaces/{workspaceId}/folders",
    "baseUrl": "https://zerodrive.futurixai.com"
  },
  "auth": {
    "required": true,
    "type": "bearer",
    "scopes": ["workspaces:read"]
  },
  "rateLimit": {
    "requests": 100,
    "window": "1m"
  },
  "request": {
    "headers": [
      {
        "name": "Authorization",
        "type": "string",
        "required": true,
        "description": "Bearer token for authentication",
        "example": "Bearer zd_live_abc123..."
      }
    ],
    "pathParams": [
      {
        "name": "workspaceId",
        "type": "string",
        "required": true,
        "description": "The unique identifier of the workspace",
        "example": "workspace_abc123"
      }
    ],
    "queryParams": [
      {
        "name": "parentId",
        "type": "string",
        "required": false,
        "description": "Filter by parent folder ID. Use 'null' or empty string for root-level folders. Omit to list all folders.",
        "example": "folder_parent123"
      },
      {
        "name": "trashed",
        "type": "boolean",
        "required": false,
        "description": "Include trashed folders in results",
        "default": false
      },
      {
        "name": "starred",
        "type": "boolean",
        "required": false,
        "description": "Only return starred folders",
        "default": false
      },
      {
        "name": "search",
        "type": "string",
        "required": false,
        "description": "Search folders by name (case-insensitive)"
      },
      {
        "name": "limit",
        "type": "integer",
        "required": false,
        "description": "Number of folders to return (max 100)",
        "default": 50
      },
      {
        "name": "offset",
        "type": "integer",
        "required": false,
        "description": "Number of folders to skip for pagination",
        "default": 0
      },
      {
        "name": "sortBy",
        "type": "string",
        "required": false,
        "description": "Field to sort by",
        "enum": ["name", "createdAt", "updatedAt"],
        "default": "name"
      },
      {
        "name": "sortOrder",
        "type": "string",
        "required": false,
        "description": "Sort direction",
        "enum": ["asc", "desc"],
        "default": "asc"
      }
    ]
  },
  "responses": {
    "success": [
      {
        "status": 200,
        "statusText": "OK",
        "description": "Folders retrieved successfully",
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "folders": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "description": { "type": "string", "nullable": true },
                  "color": { "type": "string", "nullable": true },
                  "isStarred": { "type": "boolean" },
                  "isShared": { "type": "boolean" },
                  "isTrashed": { "type": "boolean" },
                  "trashedAt": { "type": "string", "format": "date-time", "nullable": true },
                  "createdAt": { "type": "string", "format": "date-time" },
                  "updatedAt": { "type": "string", "format": "date-time" },
                  "createdBy": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" },
                      "email": { "type": "string" },
                      "image": { "type": "string", "nullable": true }
                    }
                  },
                  "parent": {
                    "type": "object",
                    "nullable": true,
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" }
                    }
                  },
                  "childCount": { "type": "integer", "description": "Number of subfolders" },
                  "fileCount": { "type": "integer", "description": "Number of files in folder" }
                }
              }
            },
            "total": { "type": "integer" },
            "limit": { "type": "integer" },
            "offset": { "type": "integer" },
            "hasMore": { "type": "boolean" }
          }
        }
      }
    ],
    "errors": [
      {
        "status": 401,
        "statusText": "Unauthorized",
        "description": "Missing or invalid authentication token"
      },
      {
        "status": 404,
        "statusText": "Not Found",
        "description": "Workspace not found or access denied"
      },
      {
        "status": 500,
        "statusText": "Internal Server Error",
        "description": "Failed to list folders"
      }
    ]
  }
}
