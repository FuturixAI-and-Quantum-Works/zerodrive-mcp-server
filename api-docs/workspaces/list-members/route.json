{
  "meta": {
    "title": "List Workspace Members",
    "description": "Retrieve all members of a workspace, including the owner and pending invitations (if the user has member management permissions).",
    "category": "Workspace Management",
    "categorySlug": "workspaces"
  },
  "endpoint": {
    "method": "GET",
    "path": "/api/v1/workspaces/{workspaceId}/members",
    "baseUrl": "https://drive.futurixai.com"
  },
  "auth": {
    "required": true,
    "type": "bearer",
    "scopes": ["workspaces:read"]
  },
  "rateLimit": {
    "requests": 100,
    "window": "1m"
  },
  "request": {
    "headers": [
      {
        "name": "Authorization",
        "type": "string",
        "required": true,
        "description": "Bearer token for authentication",
        "example": "Bearer zd_live_abc123..."
      }
    ],
    "pathParams": [
      {
        "name": "workspaceId",
        "type": "string",
        "required": true,
        "description": "The unique identifier of the workspace",
        "example": "clx1234567890"
      }
    ]
  },
  "responses": {
    "success": [
      {
        "status": 200,
        "statusText": "OK",
        "description": "Members retrieved successfully",
        "contentType": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "success": { "type": "boolean" },
            "data": {
              "type": "object",
              "properties": {
                "owner": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string", "nullable": true },
                    "email": { "type": "string" },
                    "image": { "type": "string", "nullable": true },
                    "role": { "type": "string", "enum": ["owner"] },
                    "isOwner": { "type": "boolean" }
                  }
                },
                "members": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string", "description": "Member record ID" },
                      "userId": { "type": "string" },
                      "role": { "type": "string", "enum": ["admin", "editor", "viewer"] },
                      "emailNotifications": { "type": "boolean" },
                      "joinedAt": { "type": "string", "format": "date-time" },
                      "user": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "name": { "type": "string", "nullable": true },
                          "email": { "type": "string" },
                          "image": { "type": "string", "nullable": true }
                        }
                      },
                      "isOwner": { "type": "boolean" }
                    }
                  }
                },
                "pendingInvitations": {
                  "type": "array",
                  "description": "Only included if user has member management permissions",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "email": { "type": "string" },
                      "role": { "type": "string" },
                      "expiresAt": { "type": "string", "format": "date-time" },
                      "createdAt": { "type": "string", "format": "date-time" },
                      "invitedBy": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "name": { "type": "string", "nullable": true },
                          "email": { "type": "string", "nullable": true }
                        }
                      }
                    }
                  }
                },
                "totalMembers": { "type": "integer", "description": "Total including owner" }
              }
            }
          }
        }
      }
    ],
    "errors": [
      {
        "status": 401,
        "statusText": "Unauthorized",
        "description": "Missing or invalid authentication token"
      },
      {
        "status": 404,
        "statusText": "Not Found",
        "description": "Workspace not found or access denied"
      },
      {
        "status": 500,
        "statusText": "Internal Server Error",
        "description": "Failed to list workspace members"
      }
    ]
  }
}
